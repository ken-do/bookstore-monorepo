{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": false,
        "target": "ES2019",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "lib": ["esnext"],
        "types": ["jest", "node"]
    },
    "include": ["src"],
    "exclude": ["src/**/*.test.ts"]
}
